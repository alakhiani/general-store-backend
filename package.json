{
  "name": "general-store-backend",
  "version": "1.0.0",
  "description": "The backend for a General Store app to list and sell items to customers.",
  "main": "app.ts",
  "scripts": {
    "clean": "rm -rf dist coverage",
    "build": "npx tsc --project tsconfig.build.json",
    "start": "node dist/app.js",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/app.js\"",
    "test": "jest --config jest.config.ts --watch --verbose --coverage",
    "test-ci": "jest --ci",
    "test-debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watchAll"
  },
  "keywords": [],
  "author": "Avinash Lakhiani",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "mongoose": "^7.2.1"
  },
  "devDependencies": {
    "@types/chance": "^1.1.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.1",
    "@types/node": "^20.2.3",
    "chance": "^1.1.11",
    "concurrently": "^8.0.1",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
